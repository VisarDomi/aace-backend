{
  "title": "Create user",
  "description": "Create a user object",
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "name",
    "email",
    "password"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 3
    },
    "password": {
      "type": "string",
      "minLength": 8
    }
  }
}
